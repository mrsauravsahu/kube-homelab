mode: "deployment"

config:
  receivers:
    fluentforward:
      endpoint: "fluent-bit.homelab.svc.cluster.local:24224"

  processors:
    batch: {}

  exporters:
    logging:
      loglevel: debug

    loki:
      endpoint: "http://loki.homelab.svc.cluster.local:3100/loki/api/v1/push"
      labels:
        attributes:
          log.file.name: "filename"
          host.name: "hostname"

  service:
    pipelines:
      logs:
        receivers: [fluentforward]
        processors: [batch]
        exporters: [loki]
